<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_launcher"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título de bienvenida -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:text="Bienvenido"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <!-- Imagen de perfil del usuario -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="135dp"
            android:layout_height="57dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="Imagen de perfil de Jorge"
            android:src="@drawable/jorge" />

        <!-- Información estática sobre el usuario -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="Nombre: Jorge Cazarez Cruz"
            android:textColor="#000000"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="Grado: 9°B"
            android:textColor="#000000"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="Maestro: Cupertino"
            android:textColor="#000000"
            android:textSize="10sp" />

        <!-- Información adicional o pie de página -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp"
            android:text="¡Gracias por utilizar nuestra aplicación!"
            android:textAlignment="center"
            android:textColor="#020202"
            android:textSize="10sp" />

    </LinearLayout>
</ScrollView>
